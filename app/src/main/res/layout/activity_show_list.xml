<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_dark"
    android:orientation="vertical">

    <include layout="@layout/top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Modern Sidebar with Glass Effect -->
        <com.pxf.fftv.plus.custom.VerticalScrollView
            android:layout_width="@dimen/x88"
            android:layout_height="match_parent"
            android:background="@drawable/bg_glass_effect"
            android:elevation="4dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="@dimen/x16"
                android:paddingBottom="@dimen/x16">

                <TextView
                    style="@style/video_list_title"
                    android:textColor="@color/modernTextPrimary"
                    android:textStyle="bold"
                    android:text="综艺" />

                <TextView
                    android:id="@+id/show_list_title_latest"
                    style="@style/video_list_sub_title"
                    android:textColor="@color/modernTextSecondary"
                    android:background="@drawable/bg_category_selector"
                    android:text="最新上架" />

                <TextView
                    android:id="@+id/show_list_title_china"
                    style="@style/video_list_sub_title"
                    android:textColor="@color/modernTextSecondary"
                    android:background="@drawable/bg_category_selector"
                    android:text="大陆综艺" />

                <TextView
                    android:id="@+id/show_list_title_ht"
                    style="@style/video_list_sub_title"
                    android:textColor="@color/modernTextSecondary"
                    android:background="@drawable/bg_category_selector"
                    android:text="港台综艺" />

                <TextView
                    android:id="@+id/show_list_title_ea"
                    style="@style/video_list_sub_title"
                    android:textColor="@color/modernTextSecondary"
                    android:background="@drawable/bg_category_selector"
                    android:text="欧美综艺" />

                <TextView
                    android:id="@+id/show_list_title_jk"
                    style="@style/video_list_sub_title"
                    android:textColor="@color/modernTextSecondary"
                    android:background="@drawable/bg_category_selector"
                    android:text="日韩综艺" />
            </LinearLayout>
        </com.pxf.fftv.plus.custom.VerticalScrollView>

        <!-- Content Area -->
        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/show_list_refresh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/show_list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/x16"
                android:paddingRight="@dimen/x16"
                android:paddingTop="@dimen/x16"
                android:clipToPadding="false" />

        </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    </LinearLayout>

</LinearLayout>