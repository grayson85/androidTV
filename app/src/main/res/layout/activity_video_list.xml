<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_dark"
    android:orientation="vertical">

    <include layout="@layout/top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.pxf.fftv.plus.custom.VerticalScrollView
            android:layout_width="@dimen/x80"
            android:layout_height="match_parent"
            android:background="@drawable/bg_glass_effect"
            android:elevation="4dp"
            android:paddingTop="@dimen/x12"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="@dimen/x20">

                <TextView
                    android:id="@+id/video_list_title"
                    style="@style/video_list_title"
                    android:text="标题"
                    android:textColor="@color/modernTextPrimary"
                    android:textStyle="bold"
                    android:textSize="@dimen/x16"
                    android:layout_marginBottom="@dimen/x20" />

                <TextView
                    android:id="@+id/video_list_title_0"
                    style="@style/video_list_sub_title"
                    android:text="标题" />

                <TextView
                    android:id="@+id/video_list_title_1"
                    style="@style/video_list_sub_title"
                    android:text="标题" />

                <TextView
                    android:id="@+id/video_list_title_2"
                    style="@style/video_list_sub_title"
                    android:text="标题" />

                <TextView
                    android:id="@+id/video_list_title_3"
                    style="@style/video_list_sub_title"
                    android:text="标题" />

                <TextView
                    android:id="@+id/video_list_title_4"
                    style="@style/video_list_sub_title"
                    android:text="标题" />

                <TextView
                    android:id="@+id/video_list_title_5"
                    style="@style/video_list_sub_title"
                    android:text="标题" />

                <TextView
                    android:id="@+id/video_list_title_6"
                    style="@style/video_list_sub_title"
                    android:text="标题" />

                <TextView
                    android:id="@+id/video_list_title_7"
                    style="@style/video_list_sub_title"
                    android:text="标题" />

                <TextView
                    android:id="@+id/video_list_title_8"
                    style="@style/video_list_sub_title"
                    android:text="标题" />

                <TextView
                    android:id="@+id/video_list_title_9"
                    style="@style/video_list_sub_title"
                    android:text="标题" />

                <TextView
                    android:id="@+id/video_list_title_10"
                    style="@style/video_list_sub_title"
                    android:text="标题" />

                <TextView
                    android:id="@+id/video_list_title_11"
                    style="@style/video_list_sub_title"
                    android:text="标题" />

                <TextView
                    android:id="@+id/video_list_title_12"
                    style="@style/video_list_sub_title"
                    android:text="标题" />

                <TextView
                    android:id="@+id/video_list_title_13"
                    style="@style/video_list_sub_title"
                    android:text="标题" />

                <TextView
                    android:id="@+id/video_list_title_14"
                    style="@style/video_list_sub_title"
                    android:text="标题" />

                <TextView
                    android:id="@+id/video_list_title_15"
                    style="@style/video_list_sub_title"
                    android:text="标题" />

            </LinearLayout>
        </com.pxf.fftv.plus.custom.VerticalScrollView>

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/video_list_refresh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/video_list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/x12"
                android:clipToPadding="false"
                android:background="@null" />

        </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    </LinearLayout>

</LinearLayout>