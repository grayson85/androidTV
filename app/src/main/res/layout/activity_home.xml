<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/x24"
    android:background="@drawable/bg_gradient_dark">

    <include layout="@layout/top_bar" />

    <!-- Modern Tab Bar -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@drawable/bg_glass_effect"
        android:elevation="4dp"
        android:paddingTop="@dimen/x4"
        android:paddingBottom="@dimen/x4">
        
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x24"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16">

            <TextView
                android:layout_marginLeft="@dimen/x8"
                android:id="@+id/home_tv_person"
                style="@style/home_title_text"
                android:textColor="@color/modernTextPrimary"
                android:textSize="@dimen/x12"
                android:textStyle="bold"
                android:text="我的" />

            <TextView
                android:id="@+id/home_tv_title_0"
                style="@style/home_title_text"
                android:textColor="@color/modernTextSecondary"
                android:textSize="@dimen/x12"
                android:text="标题" />

            <TextView
                android:id="@+id/home_tv_title_1"
                style="@style/home_title_text"
                android:textColor="@color/modernTextSecondary"
                android:textSize="@dimen/x12"
                android:text="标题" />

            <TextView
                android:id="@+id/home_tv_title_2"
                style="@style/home_title_text"
                android:textColor="@color/modernTextSecondary"
                android:textSize="@dimen/x12"
                android:text="标题" />

            <TextView
                android:id="@+id/home_tv_title_3"
                style="@style/home_title_text"
                android:textColor="@color/modernTextSecondary"
                android:textSize="@dimen/x12"
                android:text="标题" />

            <TextView
                android:id="@+id/home_tv_title_4"
                style="@style/home_title_text"
                android:textColor="@color/modernTextSecondary"
                android:textSize="@dimen/x12"
                android:text="标题" />

            <TextView
                android:id="@+id/home_tv_title_5"
                style="@style/home_title_text"
                android:textColor="@color/modernTextSecondary"
                android:textSize="@dimen/x12"
                android:text="标题" />
                
            <!-- Banner moved from top bar -->
            <TextView
                android:id="@+id/top_bar_menu_right_note"
                style="@style/app_title_text"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x16"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textSize="@dimen/x10"
                android:textColor="@color/colorTextNormal"
                android:text="" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.viewpager.widget.ViewPager
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:id="@+id/home_view_pager"
        android:layout_marginTop="@dimen/x16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.viewpager.widget.ViewPager>
</LinearLayout>