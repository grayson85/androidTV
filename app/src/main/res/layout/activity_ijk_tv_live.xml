<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/surface_play"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:use_controller="false" />

    <!-- Transparent overlay to capture touches on EXO player -->
    <FrameLayout
        android:id="@+id/exo_touch_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="false"
        android:background="@android:color/transparent" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="@dimen/x64"
        android:layout_height="@dimen/x64"
        android:layout_centerInParent="true" />

    <!-- Modern Menu with Glass Effect -->
    <LinearLayout
        android:id="@+id/tv_live_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_glass_effect"
        android:orientation="vertical"
        android:padding="@dimen/x20"
        android:elevation="8dp">

        <!-- Header: Category Label + Player Switcher -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/x16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/modernTextPrimary"
                android:textSize="@dimen/x16"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/btn_switch_player"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player: IJK"
                android:textColor="@color/modernTextPrimary"
                android:textSize="@dimen/x12"
                android:paddingLeft="@dimen/x12"
                android:paddingRight="@dimen/x12"
                android:paddingTop="@dimen/x6"
                android:paddingBottom="@dimen/x6"
                android:background="@drawable/bg_modern_button"
                android:elevation="2dp"
                android:focusable="true"
                android:clickable="true" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_category_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x16" />

        <!-- Horizontal layout for Matches and Links -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- Match List (Left) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tv_live_recycler_view_title"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="match_parent"
                android:descendantFocusability="afterDescendants"
                android:focusable="false"
                android:clipToPadding="false"
                android:paddingTop="@dimen/x4"
                android:nextFocusRight="@+id/tv_live_recycler_view_sub_title" />

            <!-- Stream Links (Right) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tv_live_recycler_view_sub_title"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x12"
                android:clipToPadding="false"
                android:paddingTop="@dimen/x4"
                android:visibility="visible" />
        </LinearLayout>
            
        <!-- Hidden language filter (not used) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_language_filter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>