<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected State -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/modernAccent" />
        </shape>
    </item>
    
    <!-- Focused State -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="@color/modernFocusGlow" />
                </shape>
            </item>
            <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="6dp" />
                    <solid android:color="@color/modernPrimary" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal State -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/modernSurface" />
        </shape>
    </item>
</selector>
