<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused State -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Outer Glow -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="14dp" />
                    <solid android:color="@color/modernFocusGlow" />
                </shape>
            </item>
            
            <!-- Border -->
            <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="12dp" />
                    <stroke android:width="2dp" android:color="@color/modernFocusBorder" />
                    <solid android:color="@color/modernSurfaceBright" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal State -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/modernSurface" />
        </shape>
    </item>
</selector>
