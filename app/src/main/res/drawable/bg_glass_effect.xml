<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark blur effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/modernGlassDark" />
        </shape>
    </item>
    
    <!-- Light reflection -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/modernGlassLight"
                android:centerColor="#00FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
